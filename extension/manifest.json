{
  "manifest_version": 3,
  "version": "1.0",
  "author": "Jack Merrill",
  "name": "Add Tracking Image",
  "description": "Adds a tracking image to the end of the message body",
  "browser_specific_settings": {
    "gecko": {
      "id": "composebody@sample.extensions.thunderbird.net",
      "strict_min_version": "110.0a1"
    }
  },
  "permissions": ["compose"],
  "background": {
    "scripts": ["background.js"]
  },
  "compose_action": {
    "default_title": "Add Tracking Image"
  }
}
